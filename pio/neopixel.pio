.program neopixel
.side_set 1 opt

.define public T1 2
.define public T2 5
.define public T3 3

wrap_target
    pull block           side 0
    out x, 24
bitloop:
    out y, 1             side 0 [T3 - 1]
    jmp !y do_zero       side 1 [T1 - 1]
    jmp bitloop          side 1 [T2 - 1]
do_zero:
    nop                  side 0 [T2 - 1]
    jmp bitloop
wrap
